<% provide(:title, "#{@table}") %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1>Table name: <%= @table %></h1>
        <div class="table-responsive">
<table class="table">
  <thead>
    <th>Column name</th>
    <th>Data type</th>
  </thead>
<tbody>
<% @row.each do |r|%>
  <tr>
    <% if r.name.to_s == @primary.to_s %>
    <td><%= r.name.to_s %>  <i class="fa fa-key"></i></td>
    <% else %>
    <td><%= r.name.to_s %></td>
    <% end %>
    <td><%= r.type.to_s %></td>
  </tr>
<%end%>
<tbody>
</table>
<div class = "center_button" >
<%= link_to "Edit table", edit_table_edit_path(table_name: @table), class: "btn btn-primary"%>
</div>
</div>
</div>
</div>

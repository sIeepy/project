<%provide(:title, "Database")%>
  <%= form_for(:db_session, url: connect_database_path, :html => {:autocomplete => "off"}) do |f| %>
    <%= f.label :database %>
    <%= f.select :database, @bases.map {|base| base.db_name.to_s}%>
    <%= f.label :remember_me, class: "checkbox inline" do %>
    <% end %>
    <%= f.submit "Connect to the database", class: "btn btn-primary" %>
  <% end %>

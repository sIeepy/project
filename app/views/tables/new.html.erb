<% provide(:title, "New table") %>
  <%= form_for @table do |f| %>
      <%= f.label :table_name %><br>
      <%= f.text_field :table_name%>

      <%= render "fields", index: 0%>

      <%=button_tag 'Add more', type: 'button', id: 'add-column',
             data: { fields: render('fields', index: '__INDEX__').gsub('\n', '') }%>

  <%= f.submit %>
<% end %>
